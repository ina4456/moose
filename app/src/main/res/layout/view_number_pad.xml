<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.insoline.pnd.view.custom.NumberPadViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/number_1"
            style="@style/NumberButton"
            android:text="1"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="2dp"
            android:onClick="@{viewModel::onClick}"
            android:background="@drawable/selector_btn_num_1"
            app:layout_constraintBottom_toTopOf="@+id/number_4"
            app:layout_constraintEnd_toStartOf="@+id/number_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <Button
            android:id="@+id/number_2"
            style="@style/NumberButton"
            android:text="2"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="2dp"
            android:onClick="@{viewModel::onClick}"
            android:background="@drawable/selector_btn_num_2"
            app:layout_constraintBottom_toTopOf="@+id/number_5"
            app:layout_constraintEnd_toStartOf="@+id/number_3"
            app:layout_constraintStart_toEndOf="@+id/number_1"
            app:layout_constraintTop_toTopOf="parent"/>

        <Button
            android:id="@+id/number_3"
            style="@style/NumberButton"
            android:text="3"
            android:layout_marginBottom="2dp"
            android:onClick="@{viewModel::onClick}"
            android:background="@drawable/selector_btn_num_3"
            app:layout_constraintBottom_toTopOf="@+id/number_6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/number_2"
            app:layout_constraintTop_toTopOf="parent"/>

        <Button
            android:id="@+id/number_4"
            style="@style/NumberButton"
            android:text="4"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="2dp"
            android:onClick="@{viewModel::onClick}"
            android:background="@drawable/selector_btn_num_4"
            app:layout_constraintBottom_toTopOf="@+id/number_7"
            app:layout_constraintEnd_toStartOf="@+id/number_5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/number_1"/>

        <Button
            android:id="@+id/number_5"
            style="@style/NumberButton"
            android:text="5"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="2dp"
            android:onClick="@{viewModel::onClick}"
            android:background="@drawable/selector_btn_num_5"
            app:layout_constraintBottom_toTopOf="@+id/number_8"
            app:layout_constraintEnd_toStartOf="@+id/number_6"
            app:layout_constraintStart_toEndOf="@+id/number_4"
            app:layout_constraintTop_toBottomOf="@+id/number_2"/>

        <Button
            android:id="@+id/number_6"
            style="@style/NumberButton"
            android:text="6"
            android:layout_marginBottom="2dp"
            android:onClick="@{viewModel::onClick}"
            android:background="@drawable/selector_btn_num_6"
            app:layout_constraintBottom_toTopOf="@+id/number_9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/number_5"
            app:layout_constraintTop_toBottomOf="@+id/number_3"/>

        <Button
            android:id="@+id/number_7"
            style="@style/NumberButton"
            android:text="7"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="2dp"
            android:onClick="@{viewModel::onClick}"
            android:background="@drawable/selector_btn_num_7"
            app:layout_constraintBottom_toTopOf="@+id/clear_all"
            app:layout_constraintEnd_toStartOf="@+id/number_8"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/number_4"/>

        <Button
            android:id="@+id/number_8"
            style="@style/NumberButton"
            android:text="8"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="2dp"
            android:onClick="@{viewModel::onClick}"
            android:background="@drawable/selector_btn_num_8"
            app:layout_constraintBottom_toTopOf="@+id/number_0"
            app:layout_constraintEnd_toStartOf="@+id/number_9"
            app:layout_constraintStart_toEndOf="@+id/number_7"
            app:layout_constraintTop_toBottomOf="@+id/number_5"/>

        <Button
            android:id="@+id/number_9"
            style="@style/NumberButton"
            android:text="9"
            android:layout_marginBottom="2dp"
            android:onClick="@{viewModel::onClick}"
            android:background="@drawable/selector_btn_num_9"
            app:layout_constraintBottom_toTopOf="@+id/clear_one"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/number_8"
            app:layout_constraintTop_toBottomOf="@+id/number_6"/>

        <Button
            android:id="@+id/clear_all"
            style="@style/NumberButton"
            android:text="ac"
            android:layout_marginEnd="2dp"
            android:onClick="@{viewModel::onClick}"
            android:background="@drawable/selector_btn_num_ac"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/number_0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/number_7"/>

        <Button
            android:id="@+id/number_0"
            style="@style/NumberButton"
            android:text="0"
            android:layout_marginEnd="2dp"
            android:onClick="@{viewModel::onClick}"
            android:background="@drawable/selector_btn_num_0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/clear_one"
            app:layout_constraintStart_toEndOf="@+id/clear_all"
            app:layout_constraintTop_toBottomOf="@+id/number_8"/>

        <Button
            android:id="@+id/clear_one"
            style="@style/NumberButton"
            android:text="c"
            android:onClick="@{viewModel::onClick}"
            android:background="@drawable/selector_btn_num_c"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/number_0"
            app:layout_constraintTop_toBottomOf="@+id/number_9"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>